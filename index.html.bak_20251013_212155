<script>
document.addEventListener("DOMContentLoaded",function(){
  try{
    // 1) чистим текстовые узлы от «» и слова "деньги"
    var w=document.createTreeWalker(document.body,NodeFilter.SHOW_TEXT), n;
    while(n=w.nextNode()){
      if(!n.nodeValue) continue;
      n.nodeValue = n.nodeValue.replace(/\?{2,}/g,"").replace(/деньги/gi,"");
    }
    // 2) подписываем нижние табы
    var btns=document.querySelectorAll(".tg-tabbar button, nav.tg-tabbar button, .tabs-bar button");
    if(btns.length>=3){
      btns[0].textContent="Магазин";
      btns[1].textContent="Карта";
      btns[2].textContent="Профиль";
    }
  }catch(e){ console.warn("cleanup warn",e); }
});
</script>
