<script>
// custom cleanup script: удаляет ?? и слово 'деньги', подписывает кнопки
document.addEventListener('DOMContentLoaded', function() {
  try {
    // Удаляем повторяющиеся вопросики и слово "деньги"
    const walker = document.createTreeWalker(document.body, NodeFilter.SHOW_TEXT);
    let node;
    while ((node = walker.nextNode())) {
      node.nodeValue = node.nodeValue.replace(/\\?{2,}/g, '').replace(/деньги/gi, '');
    }
    // Подписываем первые три кнопки нижнего меню
    const navButtons = document.querySelectorAll('nav button');
    if (navButtons.length >= 3) {
      navButtons[0].textContent = 'Магазин';
      navButtons[1].textContent = 'Карта';
      navButtons[2].textContent = 'Профиль';
    }
  } catch (e) {
    console.warn('cleanup error:', e);
  }
});
</script>
